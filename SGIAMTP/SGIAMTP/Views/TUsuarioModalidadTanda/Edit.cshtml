@model SGIAMTP.Models.TUsuarioModalidadTanda

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row" style="text-align:center; margin-top:50px;">
    <div class="col-lg-12 col-md-12 col-xs-12">
        <div class="col-lg-4 col-md-4 col-xs-4"></div>
        <div class="panel col-lg-4 col-md-4 col-xs-4" style="border: solid 2px #999999;border-radius: 15px 0px 15px 0px;box-shadow: 2px 2px 5px #999999;">
            <div class="panel-heading">
                <img style="width: 50% ;margin-top:10px;margin-left: initial;margin-right:initial;display:compact " src="~/images/medal.png" />
                <br />
                <label for="name" style="text-align: center; color:goldenrod;font-size:35px;margin-top:10px;">GANADOR</label>
            </div>
            <div class="panel-body" style="font-size:15px; margin-top:-25px;">
                <div class="col-sm-12">
                    <label for="name" style="text-align:left;">Participante:</label>
                    <label id="codParticipante" for="name" style="text-align: center"></label>
                </div>
                <div class="col-sm-12">
                    <label for="nombre" style="text-align:left">Nombre:</label>
                    <label id="nombre" for="name" style="text-align: left"></label>
                </div>
                <div class="col-sm-12">
                    <label for="name" style="text-align:left">Modalidad:</label>
                    <label id="modalida" for="name" style="text-align: left"></label>
                </div>

                <div class="col-sm-12">
                    <label for="name" style="text-align:right">Categoria: </label>
                    <label id="category" for="name" style="text-align:left"></label>
                </div>
                <div class="col-sm-12">
                    <label for="name" style="text-align:left">Puntaje total:</label>
                    <label id="punta" for="name" style="text-align:left"></label>
                </div>
                <div class="col-sm-12" style="margin-top:10px">
                    <button class="btn btn-danger" asp-controller="TUsuarioModalidadTanda" asp-action="Index">Regresar</button>
                </div>
            </div>
        </div>
        <div class="col-lg-4col-lg-4 col-md-4 col-xs-4"></div>
    </div>

</div>


