@model IEnumerable<SGIAMTP.Models.TUsuarioModalidadTanda>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mostrar Resultados</h2>

<body>
    <div class="container">
        <div class="row ">
            <div class="col-10" style="width : 20% ; margin: 25px 0px 0px 65px">
                <div class="form-group">
                    <label style="color:black" for="name">Tanda</label>
                    <select class="form-control" id="tandaa">
                        <option selected>Seleccione</option>
                    </select>
                </div>
            </div>

            <div class="col-10" style="width : 20% ; margin: 15px 0px 50px 65px">
                <div class="form-group">
                    <button onclick="getlistpuntajes(true)" , class="btn btn-success" style="margin: 0px 0px 0px 280px"><span class="glyphicon glyphicon-search"></span> Buscar</button>
                    <div class="col-lg-6" style="width : 40% ; margin: 0px  0px 100px 65px">
                        <div class="form-group">

                            <button asp-action="Edit" class="btn btn-success mostrarGanador" style="margin: 0px 0px 0px 400px"><span class="glyphicon glyphicon-king"></span> Mostrar Ganador</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body" align="center">
                    <table id="table-listar-puntajes"></table>
                    <div id="pager-listar-puntajes"></div>
                </div>
            </div>
        </div>
    </div>

</body>
@section Scripts{
    <script src="~/lib/jqGrid/js/i18n/grid.locale-es.js"></script>
    <script src="~/lib/jqGrid/js/jquery.jqGrid.js"></script>
    <script src="~/js/MostrarPuntajesTotales.js"></script>
    <script>
        var url = {
           CreateAsistencia:'@Url.Action("Create","TUsuarioModalidadTandas")'
        }
    </script>
}

